{% extends 'base.html.twig' %}

{% block title %}{{ 'category.seasons'|trans }}{% endblock %}

{% block body %}
    <h1 class="m-3">{{ 'category.seasons'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <th>{{ 'list.number'|trans }}</th>
                <th>{{ 'list.year'|trans }}</th>
                <th>{{ 'list.description'|trans }}</th>
                <th>{{ 'list.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('season_show', {'id': season.id}) }}">{{ 'show.show'|trans }}</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-secondary" href="{{ path('season_edit', {'id': season.id}) }}">{{ 'show.edit'|trans }}</a>
                    {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'error.noRecord'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('season_new') }}">{{ 'show.new'|trans }}</a>
{% endblock %}
