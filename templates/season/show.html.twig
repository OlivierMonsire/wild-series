{% extends 'base.html.twig' %}

{% block title %}{{ 'category.season'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'category.season'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ 'list.number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'list.year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'list.description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('season_index') }}">{{ 'show.back'|trans }}</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-secondary" href="{{ path('season_edit', {'id': season.id}) }}">{{ 'show.edit'|trans }}</a>

        {{ include('season/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
