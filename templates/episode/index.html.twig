{% extends 'base.html.twig' %}

{% block title %}{{ 'category.episodes'|trans }}{% endblock %}

{% block body %}
    <h1 class="m-3">{{ 'category.episodes'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <th>{{ 'list.title'|trans }}</th>
                <th>{{ 'list.number'|trans }}</th>
                <th>{{ 'list.synopsis'|trans }}</th>
                <th>{{ 'list.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('episode_show', {'slug':episode.slug}) }}">{{ 'show.show'|trans }}</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-secondary" href="{{ path('episode_edit', {'slug':episode.slug}) }}">{{ 'show.edit'|trans }}</a>
                    {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'error.noRecord'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('episode_new') }}">{{ 'show.new'|trans }}</a>
{% endblock %}
