{% extends 'base.html.twig' %}

{% block title %}{{ 'category.categories'|trans }}{% endblock %}

{% block body %}
    <h1 class="m-3">{{ 'category.categories'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <th>{{ 'list.name'|trans }}</th>
                <th>{{ 'list.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('category_show', {'slug': category.slug}) }}">{{ 'show.show'|trans }}</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-secondary" href="{{ path('category_edit', {'slug': category.slug}) }}">{{ 'show.edit'|trans }}</a>
                    {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'error.noRecord'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('category_new') }}">{{ 'show.new'|trans }}</a>
{% endblock %}
