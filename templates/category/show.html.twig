{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('category_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-secondary" href="{{ path('category_edit', {'slug': category.slug}) }}">edit</a>
        {{ include('category/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
