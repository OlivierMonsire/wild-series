{% extends 'base.html.twig' %}

{% block title %}{{ 'category.category'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'category.category'|trans }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'list.id'|trans }}</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>{{ 'list.name'|trans }}</th>
            <td>{{ category.name }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('category_index') }}">{{ 'show.back'|trans }}</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-secondary"
           href="{{ path('category_edit', {'slug': category.slug}) }}">{{ 'show.edit'|trans }}</a>
        {{ include('category/_delete_form.html.twig') }}
    {% endif %}

    {% for program in programs %}
        <ul>
            <a href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a>
        </ul>
    {% endfor %}

{% endblock %}
