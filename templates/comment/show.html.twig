{% extends 'base.html.twig' %}

{% block title %}{{ 'category.comment'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'category.comment'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{ 'category.comment'|trans }}</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>R{{ 'list.rate'|trans }}</th>
                <td>{{ comment.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">{{ 'show.back'|trans }}</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'show.edit'|trans }}</a>

    {{ include('comment/_delete_form.html.twig') }}
