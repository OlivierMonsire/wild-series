{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <th>{{ 'list.name'|trans }}</th>
                <th>{{ 'list.rate'|trans }}</th>
                <th>{{ 'list.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">{{ 'show.show'|trans }}</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'show.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'error.noRecord'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}">{{ 'show.new'|trans }}</a>
{% endblock %}
