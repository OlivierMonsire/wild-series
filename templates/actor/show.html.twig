{% extends 'base.html.twig' %}

{% block title %}{{ 'category.actor'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'category.actor'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'list.id'|trans }}</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>{{ 'list.name'|trans }}</th>
                <td>{{ actor.firstname }} {{ actor.lastname }}</td>
            </tr>
        </tbody>
    </table>

    <strong>{{ 'category.programs'|trans }} :</strong>
    <ul>
        {% for program in actor.programs %}
            <li><a class="btn btn-primary" href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></li>
        {% else %}
            <li>{{ 'error.noRecord'|trans }}</li>
        {% endfor %}
    </ul>

    <a class="btn btn-secondary" href="{{ path('actor_index') }}">{{ 'show.back'|trans }}</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-secondary" href="{{ path('actor_edit', {'slug': actor.slug}) }}">{{ 'show.edit'|trans }}</a>
        {{ include('actor/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
